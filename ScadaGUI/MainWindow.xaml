<Window x:Class="ScadaGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScadaGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- tagovi -->
        <GroupBox Header="Tagovi" FontWeight="Bold">
            <DataGrid x:Name="TagDataGrid"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"
                      Margin="5" />
        </GroupBox>

        <!-- alarm!! -->
        <GroupBox Header="Aktivni alarmi" FontWeight="Bold" Grid.Row="1">
            <DataGrid x:Name="AlarmDataGrid"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"
                      Margin="5" />
        </GroupBox>

        <!-- refresh i exit -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Refresh" Width="100" Margin="5" Click="Refresh_Click"/>
            <Button Content="Add Tag" Width="100" Margin="5" Click="AddTag_Click"/>
            <Button Content="Remove Tag" Width="100" Margin="5" Click="RemoveTag_Click"/>
            <Button Content="Exit" Width="100" Margin="5" Click="Exit_Click"/>
            <Button Content="Start" Width="100" Margin="5" Click="Start_Click"/>
            <Button Content="Stop" Width="100" Margin="5" Click="Stop_Click"/>

        </StackPanel>
    </Grid>
</Window>
