<Window x:Class="ScadaGUI.AddTagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Tag" Height="500" Width="550">
    <StackPanel Margin="10">

        <!-- Radio buttons za tip taga -->
        <TextBlock Text="Select Tag Type:"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <RadioButton x:Name="AnalogInputRadio" Content="Analog Input" Checked="TagTypeRadio_Checked" Margin="0,0,10,0"/>
            <RadioButton x:Name="AnalogOutputRadio" Content="Analog Output" Checked="TagTypeRadio_Checked" Margin="0,0,10,0"/>
            <RadioButton x:Name="DigitalInputRadio" Content="Digital Input" Checked="TagTypeRadio_Checked" Margin="0,0,10,0"/>
            <RadioButton x:Name="DigitalOutputRadio" Content="Digital Output" Checked="TagTypeRadio_Checked"/>
        </StackPanel>

        <!-- Osnovna polja koja se uvek prikazuju -->
        <TextBlock Text="Tag Name:"/>
        <TextBox x:Name="TagNameTextBox"/>
        <TextBlock Text="Description:" Margin="0,5,0,0"/>
        <TextBox x:Name="DescriptionTextBox"/>
        <TextBlock Text="Address:" Margin="0,5,0,0"/>
        <TextBox x:Name="AddressTextBox"/>

        <!-- Dinamička polja po tipu taga -->
        <StackPanel x:Name="DynamicFieldsPanel" Margin="0,10,0,0"/>

        <Button Content="Add" Width="80" HorizontalAlignment="Right" Margin="0,10,0,0" Click="AddButton_Click"/>
    </StackPanel>
</Window>
